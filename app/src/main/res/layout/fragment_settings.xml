<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-403dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:autoLink="web"
                android:paddingTop="16dp"
                android:text="Which video player to use. VLC is open source and ad free, and supports youtube backwards compatibility. it can be installed from the app store at
     https://play.google.com/store/apps/details?id=org.videolan.vlc Most players should work for Bitchute. Webview is mildly functional." />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:autoLink="web"
                android:text="To import,click the appropriate button and logon. Once logged in it should show a list of subscriptions and immediately start importing them." />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="Youtube settings"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/load_youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="load youtube subscriptions" />

            <RadioGroup
                android:id="@+id/youtubeplayerradioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:duplicateParentState="false"
                android:layoutDirection="ltr"
                android:layoutMode="clipBounds"
                android:orientation="horizontal"
                android:textDirection="ltr">


                <RadioButton
                    android:id="@+id/youtubeuse_vlc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VLC" />

                <RadioButton
                    android:id="@+id/youtubeuse_exo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="exo " />

                <RadioButton
                    android:id="@+id/youtubeuse_webview"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layoutDirection="ltr"
                    android:text="Webview" />

                <RadioButton
                    android:id="@+id/youtubeuse_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="System" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Bitchute settings"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/bitchuteplayerradioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="2dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/bitchuteuse_vlc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VLC" />

                <RadioButton
                    android:id="@+id/bitchuteuse_exo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exo " />

                <RadioButton
                    android:id="@+id/bitchuteuse_native"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vidview " />

                <RadioButton
                    android:id="@+id/bitchuteuse_webview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Webview" />

                <RadioButton
                    android:id="@+id/bitchuteuse_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System" />

            </RadioGroup>

            <Button
                android:id="@+id/load_bitchute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="load bitchute subscriptions" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="days to keep"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/feed_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="7" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>