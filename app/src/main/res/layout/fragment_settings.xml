<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/load_youtube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="load youtube subscriptions"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="25dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="168dp"
        android:layout_height="104dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="117dp">

        <RadioButton
            android:id="@+id/use_vlc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VLC" />

        <RadioButton
            android:id="@+id/use_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="System Default" />

        <RadioButton
            android:id="@+id/use_webview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Webview" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="366dp"
        android:layout_height="44dp"
        android:layout_marginStart="16dp"
        android:text="Which video player to use. VLC is required for youtube functionality."
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/load_youtube" />

</android.support.constraint.ConstraintLayout>