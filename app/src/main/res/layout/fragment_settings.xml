<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-403dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Bitchute settings"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/bitchuteplayerradioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/bitchuteuse_webtorrentwebview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Webtorrent Webview" />

                <RadioButton
                    android:id="@+id/bitchuteuse_vlc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VLC" />

                <RadioButton
                    android:id="@+id/bitchuteuse_exo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exo " />

                <RadioButton
                    android:id="@+id/bitchuteuse_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System" />

                <RadioButton
                    android:id="@+id/bitchuteuse_webview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Webview" />

                <RadioButton
                    android:id="@+id/bitchuteuse_native"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vidview " />

                <RadioButton
                    android:id="@+id/bitchuteuse_newpipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Newpipe" />

            </RadioGroup>

            <Button
                android:id="@+id/load_bitchute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="load bitchute subscriptions" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:text="Youtube settings"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/youtubeplayerradioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:duplicateParentState="false"
                android:layoutDirection="ltr"
                android:layoutMode="clipBounds"
                android:orientation="vertical"
                android:textDirection="ltr">


                <RadioButton
                    android:id="@+id/youtubeuse_vlc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VLC" />

                <RadioButton
                    android:id="@+id/youtubeusenewpipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Newpipe" />

                <RadioButton
                    android:id="@+id/youtubeuse_webview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layoutDirection="ltr"
                    android:text="web view" />

                <RadioButton
                    android:id="@+id/youtubeuse_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="System" />

                <RadioButton
                    android:id="@+id/youtubeuse_exo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="exo*" />

            </RadioGroup>

            <Button
                android:id="@+id/load_youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="load youtube subscriptions" />

            <LinearLayout
                android:id="@+id/feedsynclayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:text="days to keep"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/feed_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="7" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/syncsettingslayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/backgroundsyncenabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Background sync" />

                <CheckBox
                    android:id="@+id/wifisynconly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wi-Fi only" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/commentsenabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="comments     " />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/dissentercommentsenabled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dissenter" />

                    <RadioButton
                        android:id="@+id/kittencommentsenabled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kittens" />
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:autoLink="web"
                android:paddingTop="16dp"
                android:text="Webview plays the embedded version from either sites player. VLC is a great open source ad free player. If you prefer another player on your system use default. Exo player is a decent option for Bitchute which supports background play. " />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:autoLink="web"
                android:text="To import,click the appropriate button and logon. Once logged in it should show a list of your subscribed channels, then immediately start importing them. The first time " />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>