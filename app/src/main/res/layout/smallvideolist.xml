<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="3dp"
    cardview:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/RecView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnail2"
            android:layout_width="172dp"
            android:layout_height="107dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:elevation="0dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/statusView2"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_above="@+id/movieName"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="4dp"
            android:background="@null" />

        <TextView
            android:id="@+id/movieName2"
            android:layout_width="214dp"
            android:layout_height="69dp"
            android:layout_below="@+id/thumbnail"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:background="#80000000"
            android:elevation="200dp"
            android:maxLines="3"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#FFFFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/author2"
            android:layout_width="216dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:background="#80E9460C"
            android:elevation="200dp"
            android:ems="10"
            android:paddingLeft="16dp"
            android:text=""
            android:textColor="#FFEB3B"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/videoserviceicon2"
            android:layout_width="37dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="137dp"
            android:layout_marginTop="79dp"
            android:layout_marginEnd="6dp"
            android:layout_toStartOf="@+id/author2"
            android:elevation="200dp"
            android:visibility="visible" />

    </RelativeLayout>

</android.support.v7.widget.CardView>