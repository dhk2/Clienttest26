<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bgColor"
    tools:context=".fragment_video_properties">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#4F7DDB">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/thumbNailView"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:background="#FFFFFF"
                    tools:srcCompat="@tools:sample/avatars" />

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/properties_play_exo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#1054CA"
                            android:text="exo " />

                        <Button
                            android:id="@+id/properties_play_yt_embedded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#7E7956"
                            android:text="embed" />
                        <Button
                            android:id="@+id/properties_play_bc_embedded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#1054CA"
                            android:text="embed" />

                        <Button
                            android:id="@+id/properties_play_yt_chrome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#7E7956"
                            android:text="Chrome" />

                        <Button
                            android:id="@+id/properties_play_bc_chrome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#1054CA"
                            android:text="Chrome" />

                        <Button
                            android:id="@+id/properties_play_webtorrent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#1054CA"
                            android:text="p2p" />

                        <Button
                            android:id="@+id/properties_play_yt_vlc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#7E7956"
                            android:text="vlc" />

                        <Button
                            android:id="@+id/properties_play_bc_vlc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#1054CA"
                            android:text="vlc" />

                        <Button
                        android:id="@+id/properties_play_bc_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                            android:backgroundTint="#1054CA"
                        android:text="system" />

                        <Button
                            android:id="@+id/properties_play_yt_default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#7E7956"
                            android:text="system" />

                        <Button
                            android:id="@+id/properties_play_local_default"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="system" />

                        <Button
                            android:id="@+id/properties_play_newpipe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#7E7956"
                            android:text="newpipe" />

                        <Button
                            android:id="@+id/properties_play_youtube"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#7E7956"
                            android:text="youtube" />

                        <Button
                            android:id="@+id/properties_download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="#1054CA"
                            android:text="Download" />
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/video_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <WebView
                    android:id="@+id/videopropertieswebview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/closeButton"
                    android:layout_width="398dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Close" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</FrameLayout>