<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_video_properties">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/video_name"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/thumbNailView"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="#FFFFFF"
                    tools:srcCompat="@tools:sample/avatars" />

                <Button
                    android:id="@+id/properties_play_local_exo"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="exo" />

                <Button
                    android:id="@+id/properties_play_local_vlc"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="vlc" />


                <Button
                    android:id="@+id/properties_play_local_default"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="system" />

                <Button
                    android:id="@+id/properties_play_exo"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#1054CA"
                    android:text="exo" />

                <Button
                    android:id="@+id/properties_play_yt_embedded"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#7E7956"
                    android:text="embed" />

                <Button
                    android:id="@+id/properties_play_bc_embedded"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#1054CA"
                    android:text="embed" />

                <Button
                    android:id="@+id/properties_play_yt_chrome"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#7E7956"
                    android:text="Chrome" />

                <Button
                    android:id="@+id/properties_play_bc_chrome"
                    android:layout_width="wrap_content"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#1054CA"
                    android:text="Chrome" />



                <Button
                    android:id="@+id/properties_play_yt_vlc"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#7E7956"
                    android:text="vlc" />

                <Button
                    android:id="@+id/properties_play_bc_vlc"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#1054CA"
                    android:text="vlc" />

                <Button
                    android:id="@+id/properties_play_bc_default"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#1054CA"
                    android:text="system" />

                <Button
                    android:id="@+id/properties_play_yt_default"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#7E7956"
                    android:text="system" />



                <Button
                    android:id="@+id/properties_play_newpipe"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#7E7956"
                    android:text="newpipe" />

                <Button
                    android:id="@+id/properties_play_youtube"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#7E7956"
                    android:text="youtube" />

                <Button
                    android:id="@+id/properties_play_webtorrent"
                    android:layout_width="wrap_content"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#1054CA"
                    android:text="p2p" />

                <Button
                    android:id="@+id/properties_download"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#1054CA"
                    android:text="Download" />

                <Button
                    android:id="@+id/closeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Close" />
            </LinearLayout>
        </ScrollView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <WebView
                    android:id="@+id/videopropertieswebview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</FrameLayout>